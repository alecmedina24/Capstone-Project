<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/overview_weight_value"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/overview_date_value"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="03/24/1994"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/overview_weight_value"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/overview_reps_value"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="18sp"
        android:layout_toRightOf="@id/overview_weight_value"
        android:textColor="@android:color/black"/>

</RelativeLayout>